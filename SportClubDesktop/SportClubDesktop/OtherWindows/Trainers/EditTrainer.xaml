        <TextBox x:Name="txtCategory" HorizontalAlignment="Left" Height="26" Margin="92,217,-4,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="273"/>
        <Button Click="BtnCancel_Click" x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="290,330,-4,0" VerticalAlignment="Top" Width="75"/>
        <Button Click="BtnSave_Click" x:Name="btnSave" Content="Save" HorizontalAlignment="Left" Margin="210,330,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Edit trainer's info:" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="355" FontSize="24" Height="48"/>

    </Grid>
</Window>
